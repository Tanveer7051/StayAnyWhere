<% layout("layouts/boilerplate2.ejs") %>
  <style>
     .container{
    margin-top: 5rem;
  }
    .card-header{
        background-color: #dc3545;
    }
</style>


<body class="bg-light">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="card shadow border-0">
          <div class="card-header text-white text-center">
            <h2 class="mb-0">üè® StayAnyTime Booking Receipt</h2>
            <small class="d-block mt-1">Booking Confirmed</small>
          </div>

          <div class="card-body px-4 py-5">
            <div class="text-center mb-4">
              <h4 class="text-success mb-2">‚úÖ Booking Successful</h4>
              <p class="mb-1">Thank you for booking with us, <strong><%= fullName %></strong>!</p>
              <p>Your booking ID is: <strong><%= listingId %></strong></p>
            </div>

            <hr>

            <h5 class="text-muted mb-3">Customer Information</h5>
            <table class="table table-borderless mb-4">
              <tr>
                <th scope="row">Full Name:</th>
                <td><%= fullName %></td>
              </tr>
              <tr>
                <th scope="row">Email:</th>
                <td><%= email %></td>
              </tr>
              <tr>
                <th scope="row">Phone:</th>
                <td><%= phone %></td>
              </tr>
            </table>

            <h5 class="text-muted mb-3">Booking Details</h5>
            <table class="table table-borderless mb-4">
              <tr>
                <th scope="row">Check-in Date:</th>
                <td><%= checkIn %></td>
              </tr>
              <tr>
                <th scope="row">Check-out Date:</th>
                <td><%= checkOut %></td>
              </tr>
              <tr>
                <th scope="row">Number of Guests:</th>
                <td><%= guests %></td>
              </tr>
            </table>

            <hr class="my-4">

            <div class="text-center">
              <p class="text-muted mb-1">This receipt confirms your reservation with StayAnyTime.</p>
              <p class="text-muted mb-0">We look forward to hosting you!</p>
              <a href="/listings" class="btn btn-outline-primary mt-4 px-4">üè° Back to Listings</a>
            </div>
          </div>

          <div class="card-footer text-muted text-center small">
            &copy; <%= new Date().getFullYear() %> StayAnyTime ¬∑ All rights reserved
          </div>
        </div>
      </div>
    </div>
  </div>