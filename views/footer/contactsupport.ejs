<% layout("layouts/boilerplate2.ejs") %>

<main>
  <section class="contact-section">
    <div class="container">
      <h2>Contact Support</h2>

      <div class="row g-4">

        <!-- Contact Info -->
        <div class="col-md-4">
          <div class="contact-info text-center">
            <h4>📧 Email</h4>
            <p>stayanytime.contact@gmail.com</p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="contact-info text-center">
            <h4>📞 Phone</h4>
            <p>+91 7051703578</p>
          </div>
        </div>

        <div class="col-md-4">
          <div class="contact-info text-center">
            <h4>📍 Address</h4>
            <p>Banihal Ramban Jammu and Kashmir</p>
          </div>
        </div>

      </div>

      <!-- Contact Form -->
      <div class="row justify-content-center mt-5">
        <div class="col-lg-8">
          <div class="contact-form">
            <h4 class="mb-4 text-center fw-bold text-success">Send us a Message</h4>
            <form action="/contact-support" method="POST" class="needs-validation" novalidate>
              <input type="text" name="name" class="form-control" placeholder="Your Name" required>
              <div class="invalid-feedback">Name is required.</div>

              <input type="email" name="email" class="form-control" placeholder="Your Email" required>
              <div class="invalid-feedback">Valid email is required.</div>

              <input type="text" name="subject" class="form-control" placeholder="Subject" required>
              <div class="invalid-feedback">Subject is required.</div>

              <textarea name="message" rows="5" class="form-control" placeholder="Your Message" required></textarea>
              <div class="invalid-feedback">Message is required.</div>

              <button type="submit" class="btn btn-success w-100 mt-3">Send Message</button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </section>
</main>
