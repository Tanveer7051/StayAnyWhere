<% layout("layouts/boilerplate2.ejs") %>


<main>
  <!-- Header Banner -->
  <section class="services-header">
    <div class="container">
      <h1>Our Services</h1>
      <p class="lead mt-3">Everything you need for a seamless stay experience</p>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section bg-light">
    <div class="container">
      <h2>What We Offer</h2>
      <div class="row g-4 mt-4">
        <div class="col-md-4">
          <div class="service-card">
            <i class="fa-solid fa-house"></i>
            <h5>Wide Accommodation Options</h5>
            <p>Choose from hotels, apartments, and homestays across multiple cities with verified listings.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="service-card">
            <i class="fa-solid fa-calendar-check"></i>
            <h5>Instant Booking</h5>
            <p>Book your stay instantly without waiting. Get confirmation immediately with our secure system.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="service-card">
            <i class="fa-solid fa-headset"></i>
            <h5>24/7 Customer Support</h5>
            <p>Our support team is available round the clock to assist you with any queries or issues.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="service-card">
            <i class="fa-solid fa-shield-check"></i>
            <h5>Verified Hosts & Safety</h5>
            <p>All hosts are verified to ensure a safe and trustworthy stay experience for our users.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="service-card">
            <i class="fa-solid fa-tags"></i>
            <h5>Best Price Guarantee</h5>
            <p>We provide competitive pricing on all stays, ensuring you get the best value every time.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="service-card">
            <i class="fa-solid fa-mobile-screen"></i>
            <h5>Easy-to-Use App</h5>
            <p>Book and manage your stays on-the-go with our intuitive mobile app for iOS and Android.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="services-section text-center py-5">
    <div class="container">
      <h2>Ready to Book Your Stay?</h2>
      <p class="mb-4">Experience hassle-free bookings and verified accommodations with StayAnyTime.</p>
      <a href="/signup" class="btn btn-success btn-lg rounded-3">Sign Up Now</a>
    </div>
  </section>
</main>
